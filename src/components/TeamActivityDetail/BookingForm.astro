---
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";

interface Props {
  activityTitle: string;
}

const { activityTitle } = Astro.props;
---

<Card class="p-6">
  <form class="space-y-6">
    <input type="hidden" name="activity" value={activityTitle} />
    
    <div class="grid sm:grid-cols-2 gap-6">
      <div class="space-y-2">
        <label for="firstName" class="text-sm font-medium">Voornaam</label>
        <input
          type="text"
          id="firstName"
          name="firstName"
          required
          class="w-full px-3 py-2 border rounded-md"
        />
      </div>
      
      <div class="space-y-2">
        <label for="lastName" class="text-sm font-medium">Achternaam</label>
        <input
          type="text"
          id="lastName"
          name="lastName"
          required
          class="w-full px-3 py-2 border rounded-md"
        />
      </div>
    </div>

    <div class="space-y-2">
      <label for="email" class="text-sm font-medium">E-mailadres</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-3 py-2 border rounded-md"
      />
    </div>

    <div class="space-y-2">
      <label for="phone" class="text-sm font-medium">Telefoonnummer</label>
      <input
        type="tel"
        id="phone"
        name="phone"
        required
        class="w-full px-3 py-2 border rounded-md"
      />
    </div>

    <div class="grid sm:grid-cols-2 gap-6">
      <div class="space-y-2">
        <label for="date" class="text-sm font-medium">Gewenste datum</label>
        <input
          type="date"
          id="date"
          name="date"
          required
          class="w-full px-3 py-2 border rounded-md"
        />
      </div>
      
      <div class="space-y-2">
        <label for="groupSize" class="text-sm font-medium">Aantal personen</label>
        <input
          type="number"
          id="groupSize"
          name="groupSize"
          min="1"
          required
          class="w-full px-3 py-2 border rounded-md"
        />
      </div>
    </div>

    <div class="space-y-2">
      <label for="message" class="text-sm font-medium">Bericht</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        class="w-full px-3 py-2 border rounded-md"
      ></textarea>
    </div>

    <Button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white">
      Verstuur aanvraag
    </Button>
  </form>
</Card>