---
import { localizePath } from 'astro-i18next';
import { t } from 'i18next';
import { LanguageSelector } from 'astro-i18next/components';

const links = [
  { href: '/', label: t('navbar:home') },
  { href: '/teambuildings', label: t('navbar:teambuildings') },
  { href: '/concepten', label: t('navbar:concepten') },
  { href: '/over-actionmaker', label: t('navbar:over-actionmaker') },
  { href: '/contact', label: t('navbar:contact') },
];
---

<div
  id="mobile-menu"
  class="fixed inset-y-0 right-0 w-full max-w-sm bg-black/95 backdrop-blur-xl translate-x-full transition-transform duration-300 z-50 flex flex-col"
>
  <nav class="flex-1 px-8 py-24">
    <ul class="space-y-6">
      {
        links.map(({ href, label }) => (
          <li>
            <a
              href={localizePath(href)}
              class="text-lg font-medium text-white/90 hover:text-white transition-colors"
            >
              {label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>

  {/* Language Selector */}
  <div class="px-8 pb-8">
    <LanguageSelector
      showFlag={true}
      class="w-full px-3 py-2 text-sm text-white/90 hover:text-white border border-white/10 rounded-md bg-white/5 hover:bg-white/10 transition-colors duration-300"
    />
  </div>
</div>
