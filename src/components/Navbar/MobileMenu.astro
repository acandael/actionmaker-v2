---
import { Button } from '@/components/ui/button';
import { Menu } from 'lucide-react';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="flex lg:hidden">
  <Button variant="ghost" size="icon" data-mobile-menu-trigger>
    <Menu className="h-6 w-6" />
    <span class="sr-only">{t('nav.menu')}</span>
  </Button>
</div>

<div class="fixed inset-0 z-50 bg-background/80 backdrop-blur-sm hidden" data-mobile-menu-overlay>
  <div class="fixed inset-x-4 top-8 z-50 rounded-lg bg-background p-6 shadow-lg">
    <div class="flex items-center justify-between">
      <a href="/" class="block">
        <span class="sr-only">ActionMaker</span>
      </a>
      <Button variant="ghost" size="icon" data-mobile-menu-close>
        <span class="sr-only">{t('nav.close')}</span>
      </Button>
    </div>
    <nav class="mt-6">
      <ul class="space-y-4">
        <li>
          <a href={lang === 'nl' ? '/' : `/${lang}`} class="block text-lg">
            {t('nav.home')}
          </a>
        </li>
        <li>
          <a href={`/${lang}/teambuildings`} class="block text-lg">
            {t('nav.teambuildings')}
          </a>
        </li>
        <li>
          <a href={`/${lang}/concepts`} class="block text-lg">
            {t('nav.concepts')}
          </a>
        </li>
        <li>
          <a href={`/${lang}/about`} class="block text-lg">
            {t('nav.about')}
          </a>
        </li>
        <li>
          <a href={`/${lang}/contact`} class="block text-lg">
            {t('nav.contact')}
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>
