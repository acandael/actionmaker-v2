---
import { Card } from '@/components/ui/card';
import { ArrowRight, Users, Clock } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
  duration?: string;
  groupSize?: string;
}

const { title, description, image, href, duration, groupSize } = Astro.props;
---

<Card className="group overflow-hidden">
  <a href={href} class="block">
    <div class="relative h-48 overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      />
      <div
        class="absolute inset-0 bg-black/40 transition-opacity duration-300 group-hover:opacity-70"
      >
      </div>
    </div>

    <div class="p-6">
      <h3 class="text-xl font-bold mb-2">{title}</h3>
      <p class="text-muted-foreground mb-4 line-clamp-2">{description}</p>

      <div class="space-y-2">
        {
          duration && (
            <div class="flex items-center gap-2 text-sm text-muted-foreground">
              <Clock className="h-4 w-4" />
              <span>{duration}</span>
            </div>
          )
        }

        {
          groupSize && (
            <div class="flex items-center gap-2 text-sm text-muted-foreground">
              <Users className="h-4 w-4" />
              <span>{groupSize}</span>
            </div>
          )
        }
      </div>

      <div class="mt-4 flex items-center text-sm font-medium">
        Meer info
        <ArrowRight className="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1" />
      </div>
    </div>
  </a>
</Card>
