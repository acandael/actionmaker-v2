---
interface Props {
  subtitle: string;
  title: string;
}

const { subtitle, title } = Astro.props;
---

<div class="text-center mb-20">
  <h2 class="text-lg font-medium text-muted-foreground mb-3">
    {subtitle}
  </h2>
  <h3 class="text-4xl font-bold tracking-tight">
    {title}
  </h3>
  <div class="mt-4 w-24 h-1 bg-primary mx-auto rounded-full"></div>
</div>