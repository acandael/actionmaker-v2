---
import { SectionTitle } from "../TeamActivities/SectionTitle";
import TestimonialCard from "./TestimonialCard.astro";
import ClientLogos from "./ClientLogos.astro";
import { testimonials, clients } from "./testimonials-data";
---

<section class="py-24 px-4 bg-background">
  <div class="max-w-7xl mx-auto">
    <SectionTitle subtitle="Wat Zeggen Onze Klanten?" title="Ervaringen" />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-20">
      {testimonials.map((testimonial) => (
        <TestimonialCard testimonial={testimonial} />
      ))}
    </div>

    <ClientLogos clients={clients} />
  </div>
</section>
 