---
interface Testimonial {
  content: string;
  name: string;
  role: string;
  image: string;
}

interface Props {
  testimonial: Testimonial;
}

const { testimonial } = Astro.props;
---

<div class="relative h-full">
  {testimonial && (
    <div
      class="h-full p-6 rounded-lg border border-neutral-600/40
      transition-all duration-300 hover:border-neutral-700/60 hover:-translate-y-1
      hover:shadow-lg hover:shadow-black/20"
    >
      <div class="flex flex-col h-full justify-between gap-6">
        <div class="space-y-4">
          <p class="text-black/90 text-sm md:text-base italic leading-relaxed font-medium">
            "{testimonial.content}"
          </p>
        </div>

        <div class="flex items-center gap-4">
          <img
            src={testimonial.image}
            alt={testimonial.name}
            class="w-12 h-12 rounded-full object-cover"
          />
          <div>
            <p class="font-bold text-black text-base">{testimonial.name}</p>
            <p class="text-sm text-black/80 font-medium">{testimonial.role}</p>
          </div>
        </div>
      </div>
    </div>
  )}
</div>