---
interface Props {
  name: string;
  role: string;
  content: string;
  image: string;
}

const { name, role, content, image } = Astro.props;
---

<div class="group relative p-8 rounded-2xl bg-white shadow-md hover:shadow-xl transition-all duration-300">
  <div class="flex flex-col items-center text-center">
    <div class="mb-8 relative">
      <div class="absolute inset-0 bg-gradient-to-b from-red-500/20 to-transparent rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      <img 
        src={image} 
        alt={name}
        class="w-24 h-24 rounded-full object-cover border-4 border-white shadow-xl transform group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    </div>
    <blockquote class="text-lg text-muted-foreground mb-6 italic relative px-8">
      <span class="relative z-10">"{content}"</span>
    </blockquote>
    <div class="relative">
      <div class="font-semibold text-lg group-hover:text-red-600 transition-colors duration-300">{name}</div>
      <div class="text-muted-foreground">{role}</div>
    </div>
  </div>

  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-white/5 opacity-0 group-hover:opacity-100 rounded-2xl transition-opacity duration-300"></div>
</div>

<style>
  blockquote::before,
  blockquote::after {
    content: '"';
    font-size: 4rem;
    font-family: serif;
    position: absolute;
    opacity: 0.1;
    line-height: 1;
    transition: opacity 0.3s ease;
  }
  
  blockquote::before {
    left: 0;
    top: -1rem;
  }
  
  blockquote::after {
    right: 0;
    bottom: -2rem;
  }

  .group:hover blockquote::before,
  .group:hover blockquote::after {
    opacity: 0.2;
  }
</style>