---
import { Card } from '@/components/ui/card';
import { Image } from 'astro:assets';
import { Mail, Phone } from 'lucide-react';

// Import your contact image
import contactImage from '../../assets/over-actionmaker.jpg'; // adjust path to match your image location
---

<Card className="p-8">
  <div class="space-y-8">
    <div class="aspect-[4/3] relative rounded-xl overflow-hidden">
      <Image
        src={contactImage}
        alt="Team building activity"
        width={534}
        height={400}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
    </div>

    <div class="space-y-4">
      <h2 class="text-xl font-semibold">We helpen je graag verder</h2>
      <p class="text-muted-foreground">
        Via een persoonlijke en flexibele aanpak bezorgt ActionMaker jou medewerkers een leuke dag
        zonder zorgen.
      </p>
    </div>

    <div class="space-y-4">
      <a
        href="tel:+32485462505"
        class="flex items-center gap-3 text-lg hover:text-red-600 transition-colors"
      >
        <Phone className="h-5 w-5" />
        0485 46 25 05
      </a>
      <a
        href="mailto:info@actionmaker.be"
        class="flex items-center gap-3 text-lg hover:text-red-600 transition-colors"
      >
        <Mail className="h-5 w-5" />
        info@actionmaker.be
      </a>
    </div>

    <a
      href="/over-actionmaker"
      class="inline-block text-red-600 hover:text-red-700 font-medium transition-colors"
    >
      Lees meer over ActionMaker
    </a>
  </div>
</Card>
