---
import SectionTitle from './TeamActivities/SectionTitle.astro';
import TestimonialCard from './Testimonials/TestimonialCard.astro';
import ClientLogos from './Testimonials/ClientLogos.astro';
import { testimonials, clients } from './Testimonials/testimonials-data';
---

<section class="py-24 px-4 bg-background">
  <div class="max-w-7xl mx-auto">
    <SectionTitle 
      subtitle="Wat Zeggen Onze Klanten?"
      title="Ervaringen"
    />
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-20">
      {testimonials.map((testimonial) => (
        <TestimonialCard 
          name={testimonial.name}
          role={testimonial.role}
          content={testimonial.content}
          image={testimonial.image}
        />
      ))}
    </div>

    <ClientLogos clients={clients} />
  </div>
</section>