---
import { Button } from "@/components/ui/button";
import { ArrowRight } from "lucide-react";
---

<section class="relative bg-background py-24 px-4 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="space-y-16">
        <div class="space-y-4">
          <h2 class="text-4xl md:text-5xl font-bold tracking-tight">
            Een Leuke Dag Zonder Zorgen
          </h2>
          <h3 class="text-4xl md:text-5xl font-bold tracking-tight">
            Het Team Versterkt!
          </h3>
        </div>
        
        <Button 
          size="lg"
          className="bg-red-600 hover:bg-red-700 text-white group px-8 py-7 text-lg rounded-xl font-semibold"
          client:load
        >
          Vind je ideale teambuilding
          <ArrowRight className="ml-3 h-6 w-6 transition-transform group-hover:translate-x-1" />
        </Button>
      </div>

      <!-- Right Image -->
      <div class="relative h-[400px] lg:h-[600px]">
        <img
          src="https://images.unsplash.com/photo-1541534741688-6078c6bfb5c5?auto=format&fit=crop&q=80&w=1200"
          alt="Team Archery Activity"
          class="absolute inset-0 w-full h-full object-cover rounded-lg shadow-2xl"
        />
      </div>
    </div>
  </div>
</section>