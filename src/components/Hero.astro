---
import { Image } from 'astro:assets';
import { Button } from '@/components/ui/button';
import { ArrowRight } from 'lucide-react';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import heroImage from '../assets/hero.jpg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Create the correct URL based on locale
const teamBuildingsUrl = lang === 'nl' ? '/teambuildings' : `/${lang}/teambuildings`;
---

<section class="relative min-h-[90vh] md:min-h-screen flex items-center -mt-[64px]">
  <div class="absolute inset-0 z-0 overflow-hidden">
    <Image
      src={heroImage}
      alt="Team building activities"
      class="w-full h-full object-cover object-center md:object-[center_30%]"
      quality="high"
    />
    <div
      class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/60 to-black/30 md:to-transparent"
    >
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 py-16 md:py-24 mt-16">
    <div class="max-w-3xl">
      <h1 class="text-balance text-3xl sm:text-4xl md:text-6xl font-bold text-white mb-4 md:mb-6">
        {t('home.hero.title')}
      </h1>
      <p class="text-lg md:text-xl text-white/90 mb-6 md:mb-8">
        {t('home.hero.subtitle')}
      </p>
      <div>
        <Button
          className="bg-red-600 hover:bg-red-700 text-white group h-auto py-3 px-6 md:py-4 md:px-8 text-base md:text-lg rounded-xl font-medium shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <a href={teamBuildingsUrl} class="flex items-center gap-2">
            {t('home.hero.cta')}
            <ArrowRight
              className="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-1"
            />
          </a>
        </Button>
      </div>
    </div>
  </div>
</section>

<script>
  const scrollIndicator = document.getElementById('scroll-indicator');
  if (scrollIndicator) {
    scrollIndicator.addEventListener('click', () => {
      window.scrollTo({ top: window.innerHeight, behavior: 'smooth' });
    });
  }
</script>
