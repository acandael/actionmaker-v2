---
import { Image } from 'astro:assets';
import { Button } from '@/components/ui/button';
import { ArrowRight } from 'lucide-react';
import { localizePath } from 'astro-i18next';
import { t, setDefaultNamespace } from 'i18next';

setDefaultNamespace('home');

// Import your hero image
import heroImage from '../assets/hero.jpg';
---

<section class="relative min-h-screen flex items-center -mt-[64px]">
  <div class="absolute inset-0 z-0">
    <Image
      src={heroImage}
      alt="Team building activities"
      class="w-full h-full object-cover"
      quality="high"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/60 to-transparent"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 py-24 mt-16">
    <div class="max-w-3xl">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
        {t('home:hero.title')}
      </h1>
      <p class="text-xl text-white/90 mb-8">
        {t('home:hero.subtitle')}
      </p>
      <div>
        <Button
          client:load
          className="bg-red-600 hover:bg-red-700 text-white group h-auto py-4 px-8 text-lg rounded-xl font-medium shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <a href={localizePath('/teambuildings')} class="flex items-center gap-2">
            {t('home:hero.cta')}
            <ArrowRight
              className="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
            />
          </a>
        </Button>
      </div>
    </div>
  </div>
</section>

<script>
  const scrollIndicator = document.getElementById('scroll-indicator');
  if (scrollIndicator) {
    scrollIndicator.addEventListener('click', () => {
      window.scrollTo({ top: window.innerHeight, behavior: 'smooth' });
    });
  }
</script>
