---
import { Button } from '@/components/ui/button';
import { ArrowRight } from 'lucide-react';
import { Image } from 'astro:assets';

// Import your CTA image
import ctaImage from '../../assets/cta.jpg'; // adjust path to match your image location

const stats = [
  { value: '500+', label: 'Tevreden klanten' },
  { value: '50+', label: 'Unieke activiteiten' },
  { value: '10+', label: 'Jaar ervaring' },
  { value: '98%', label: 'Positieve reviews' },
];
---

<section class="relative py-32 px-4 overflow-hidden bg-gradient-to-b from-background to-muted/50">
  {/* Background Pattern */}
  <div class="absolute inset-0 opacity-40">
    <div class="absolute inset-0 bg-grid-white/10"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-background via-transparent to-transparent">
    </div>
  </div>

  <div class="relative max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      {/* Left Content */}
      <div class="space-y-12">
        <div class="space-y-6">
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight">
            <span class="text-red-600">Versterk</span> Je Team,
            <br />
            <span class="text-red-600">Versterk</span> Je Bedrijf
          </h2>
          <p class="text-xl text-muted-foreground max-w-xl">
            Ontdek onze unieke teambuilding activiteiten en creÃ«er onvergetelijke ervaringen voor je
            team.
          </p>
        </div>

        {/* Stats Grid */}
        <div class="grid grid-cols-2 gap-8">
          {
            stats.map(({ value, label }) => (
              <div class="space-y-2">
                <div class="text-3xl font-bold text-red-600">{value}</div>
                <div class="text-muted-foreground">{label}</div>
              </div>
            ))
          }
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <Button
            size="lg"
            className="bg-red-600 hover:bg-red-700 text-white group px-8 py-6 text-lg rounded-xl font-medium shadow-lg hover:shadow-xl transition-all duration-300"
          >
            <a href="/teambuildings" class="flex items-center gap-2">
              Vind je teambuilding
              <ArrowRight className="ml-2 h-5 w-5 transition-transform group-hover:translate-x-1" />
            </a>
          </Button>
        </div>
      </div>

      {/* Right Image */}
      <div class="relative">
        <div
          class="relative aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl transform hover:scale-[1.02] transition-transform duration-500"
        >
          <Image
            src={ctaImage}
            alt="Team collaboration"
            width={800}
            height={600}
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-tr from-black/40 to-transparent"></div>
        </div>

        {/* Decorative Elements */}
        <div class="absolute -bottom-6 -left-6 w-24 h-24 bg-red-600/10 rounded-full blur-2xl"></div>
        <div class="absolute -top-6 -right-6 w-32 h-32 bg-red-600/10 rounded-full blur-2xl"></div>
      </div>
    </div>
  </div>
</section>

