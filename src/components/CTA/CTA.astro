---
import { Button } from '@/components/ui/button';
import { ArrowRight } from 'lucide-react';
import { t } from 'i18next';
---

<section class="py-24 px-4 bg-gradient-to-b from-background to-muted/50">
  <div class="max-w-7xl mx-auto text-center">
    <h2 class="text-4xl font-bold mb-6">{t('cta:title')}</h2>
    <p class="text-xl text-muted-foreground mb-12 max-w-2xl mx-auto">
      {t('cta:description')}
    </p>
    <Button asChild size="lg" className="bg-red-600 hover:bg-red-700 text-white">
      <a href="/contact" class="flex items-center gap-2">
        {t('cta:button')}
        <ArrowRight className="w-4 h-4" />
      </a>
    </Button>
  </div>
</section>

